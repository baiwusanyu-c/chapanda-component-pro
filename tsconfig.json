{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "play/**/*.tsx",
    "play/**/*.ts",
    "play/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/**/*.vue",
    "scripts/**/*.ts",
    "scripts/**/*.vue",
    "scripts/**/*.vue"
  ],
  // ts 排除的文件
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
